@model FootBallWebLaba1.Models.Championship

@{
    ViewData["Title"] = "Create";
}

<h1>Створення чемпіонату</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChampionshipCountry" class="control-label"></label>
                <input asp-for="ChampionshipCountry" class="form-control" />
                <span asp-validation-for="ChampionshipCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChampionshipName" class="control-label"></label>
                <input asp-for="ChampionshipName" class="form-control" />
                <span asp-validation-for="ChampionshipName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChampionshipClubQuantity" class="control-label"></label>
                <input asp-for="ChampionshipClubQuantity" class="form-control" />
                <span asp-validation-for="ChampionshipClubQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-success mt-1 mb-1" style="font-size:12px; padding:5px 7px; border-radius: 10px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary mt-1 mb-1" style="font-size:12px; padding:5px 7px; border-radius: 10px">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
